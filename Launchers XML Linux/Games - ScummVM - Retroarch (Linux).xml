<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!--
    ROM Launcher for ScummVM using Retroarch.
    
    ScummVM requires some configuration before running any games.
    Follow the instructions here https://docs.libretro.com/library/scummvm/
    
    ScummVM load conf files https://github.com/RobLoach/libretro-database-scummvm/tree/master/games
  -->
<advanced_emulator_launcher_configuration>
<launcher>
    <name>ScummVM (Retroarch)</name>
    <category>Games</category>
    <Launcher_NFO>../Launcher assets Games/ScummVM.nfo</Launcher_NFO>
    <Asset_Prefix>../Launcher assets Games/ScummVM</Asset_Prefix>
    <platform>ScummVM</platform>
    <application>/home/kodi/bin/retroarch</application>
    <args>-L /home/kodi/bin/libretro/scummvm_libretro.so -f -v &quot;$rom$&quot;</args>
    <ROM_path>/home/kodi/AEL-ROMs/games-scummvm/</ROM_path>
    <ROM_ext>scummvm</ROM_ext>
    <ROM_asset_path>/home/kodi/AEL-assets/games-scummvm/</ROM_asset_path>
</launcher>
</advanced_emulator_launcher_configuration>
